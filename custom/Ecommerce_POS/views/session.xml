<?xml version="1.0" encoding="UTF-8"?>
<odoo>
    <record id="view_custom_session_form" model="ir.ui.view">
        <field name="name">custom.session.form</field>
        <field name="model">custom.session</field>
        <field name="arch" type="xml">
            <form string="Custom session">
                <sheet>
                    <group>
                       
                        <field name="session_name"/>
                        <field name="order_ids"/>
                        <field name="pos_config_id"/>
                                        
                        <!-- Add other inherited fields from product.template as needed -->
                    </group>
                </sheet>
            </form>
        </field>
    </record>

    <record id="view_custom_session_tree" model="ir.ui.view">
        <field name="name">custom.session.tree</field>
        <field name="model">custom.session</field>
        <field name="arch" type="xml">
            <tree string="Custom Session">
               
                        <field name="session_name"/>
                        <field name="order_ids"/>
                        <field name="pos_config_id"/>
                
                <!-- Add other inherited fields from product.template as needed -->
            </tree>
        </field>
    </record>

    <record id="action_ecommerce_session" model="ir.actions.act_window">
        <field name="name">Custom Sessions</field>
        <field name="res_model">custom.session</field>
        <field name="view_mode">tree,form</field>
    </record>

    <!-- <menuitem id="menu_custom_product_root" name="Custom Products"/>
    <menuitem id="menu_custom_product" parent="menu_custom_product_root" action="action_custom_product" name="Manage Custom Products"/> -->
    <menuitem id="menu_session" name="Sessions"
        parent="menu_ecommerce_sessionoperation"
        action="action_ecommerce_session"
        sequence='10'/>
</odoo>